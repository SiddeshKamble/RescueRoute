datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  CITIZEN
  RESPONDER
  ADMIN
}

enum ResponderType {
  AMBULANCE
  DOCTOR
  POLICE
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())

  emergencies EmergencyRequest[]   @relation("ReportedEmergencies")
  responder   ResponderProfile?
}

model ResponderProfile {
  id        Int           @id @default(autoincrement())
  type      ResponderType
  status    String        @default("AVAILABLE")

  userId    Int           @unique
  user      User          @relation(fields: [userId], references: [id])

  latitude  Float
  longitude Float

  createdAt DateTime @default(now())
}

model EmergencyRequest {
  id         Int      @id @default(autoincrement())
  type       String
  latitude   Float
  longitude  Float
  createdAt  DateTime @default(now())

  reporterId Int
  reporter   User     @relation("ReportedEmergencies", fields: [reporterId], references: [id])
}
